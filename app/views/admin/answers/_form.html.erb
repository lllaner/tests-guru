<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <div class="form-group">
    <p>
      <%= form.label :body %>
      <%= form.text_field :body, class: 'form-control' %>
    </p>

    <div class="form-check">
      <%= form.check_box :correct, class: 'form-check-input' %>
      <%= form.label :correct, class: 'form-check-label'%>
    </div>

    <p><%= form.submit class: 'btn btn-success mt-3' %></p>
  </div>
<% end %>
