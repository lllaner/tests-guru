<div class="row justify-content-center">
  <div class="col col-md-6">
    <h1 class="text-center"><%= @question.test.title %> Question</h1>
    <h3 class="">Question</h2>
    <p class="h5 text-primary"><%= @question.body %></p>

    <%= link_to 'New answer', new_admin_question_answer_path(@question), class: 'btn btn-success' %>


    <table class="table table-hover my-3">
      <thead class="thead-dark">
        <tr class="text-center">
          <th>Answers</th>
          <th colspan="3"> Action</th>
        </tr>
      </thead>
      <tbody>
        <%= render @question.answers %>
      </tbody>
    </table>

    <%= link_to 'Edit', edit_admin_question_path(@question), class: 'btn btn-info'%>
    <%= link_to 'Back', admin_test_path(@question.test), class: 'btn btn-primary' %>
  </div>
</div>
