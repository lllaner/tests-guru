<div class="row justify-content-center">
  <div class="col col-md-6">
    <h1 class="text-center">Test : <%= @test.title %></h1>
    <h3 class="text-center">Author: <%= @test.author.name %></h1>

    <table class="table table-hover my-3">
      <thead class="thead-dark">
        <tr class="text-center">
          <th>Question</th>
          <th colspan="4">Actions</th>
        </tr>
      </thead>
    <%= render @test.questions%>
    </table>

    <%= link_to 'New question', new_admin_test_question_path(@test), class: 'btn btn-success' %>
    <%= link_to 'Back', admin_tests_path, class: 'btn btn-primary'%>
    <%= link_to 'Edit', edit_admin_test_path(@test), class: 'btn btn-info' %>
  </div>
</div>
